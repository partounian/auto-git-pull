    "description": "Automatically pulls a git repository when commits are pushed.",
    "license": "MIT",
    "authors": [
        {
            "name": "Anthony Kuske",
            "homepage": "http://www.anthonykuske.com"
        },
        {
            "name": "Patrick Artounian",
        }
    ],
    "autoload": {
        "psr-4": {
